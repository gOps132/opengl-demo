{
    "env": {
        "myDefaultIncludePaths": [
            "${workspaceFolder}", 
            "${workspaceFolder}/**",
            "${workspaceFolder}/**/src/header"
        ],
        "myOtherIncludePaths": [
            "${workspaceFolder}/**/src/vendor/**"
        ],
        "myCompilerPath": "/usr/bin/clang"
      },

    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${myDefaultIncludePaths}",
                "${myOtherIncludePaths}"
            ],
            "defines": [],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "${myCompilerPath}",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "clang-x64",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ],
    "version": 4
}